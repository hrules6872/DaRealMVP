<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <include
      layout="@layout/layout_toolbar"/>

  <TextView
      android:id="@+id/message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      tools:text="message"
      android:layout_below="@+id/toolbar"
      tools:ignore="UnknownIdInLayout"
      android:padding="@dimen/default_padding"
      android:textStyle="bold"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_centerInParent="true"
      >

    <Button
        android:id="@+id/showMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_message"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/showListActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_listActivity"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/showPagerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_pagerActivity"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/showDialogFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showDialogFragment"
        android:layout_gravity="center"
        />

  </LinearLayout>
</RelativeLayout>
